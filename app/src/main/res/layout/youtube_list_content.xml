<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/youtube_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/youtube_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"

            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/youtube_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/btn_padding"
            android:layout_marginLeft="@dimen/btn_padding"
            android:text="@string/youtube_video_title"
            android:textColor="#000000" />
    </LinearLayout>
</layout>
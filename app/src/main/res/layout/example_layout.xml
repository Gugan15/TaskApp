<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.taskapp.CustomLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/custom_text"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/btn_margin_bottom"
            android:layout_marginLeft="@dimen/btn_margin_bottom"
            android:text="@string/phone_number"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/custom_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_number" />

        <ImageView
            android:id="@+id/custom_image_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:text="@string/phone_number"
            app:srcCompat="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/custom_image_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:text="@string/phone_number"
            app:srcCompat="@drawable/ic_baseline_save_24" />
    </com.example.taskapp.CustomLayout>
</androidx.constraintlayout.widget.ConstraintLayout>